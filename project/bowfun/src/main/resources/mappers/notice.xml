<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.care.bowfun.notice.NoticeMapper">
	<resultMap type="com.care.bowfun.notice.NoticeDTO"
		id="Notice_bowfun">
		<result column="writeDate" property="writeDate" />
		<result column="fileName" property="fileName" />
	</resultMap>

	<select id="NoticeForm" resultMap="Notice_bowfun">
        SELECT B.* FROM (
            SELECT ROW_NUMBER() OVER (ORDER BY no DESC) as r, A.* FROM Notice_bowfun A
        ) B WHERE B.r BETWEEN #{begin} AND #{end}
    </select>

	<select id="totalCount">
		SELECT count(no) FROM Notice_bowfun
	</select>

	<!-- <insert id="NoticeWriteProc" useGeneratedKeys="true" keyProperty="no">
        <selectKey order="BEFORE" keyProperty="no" resultType="int">
            SELECT COALESCE(MAX(no), 0) + 1 FROM Notice_bowfun
        </selectKey>
        INSERT INTO Notice_bowfun (no, title, content, id, write_date, views, fileName)
        VALUES (#{no}, #{title}, #{content}, #{id}, #{writeDate}, 0, #{fileName})
    </insert> -->
    	<insert id="NoticeWriteProc">
		<selectKey order="BEFORE" keyProperty="no" resultType="int">
			SELECT NVL(max(no), 0)+1 FROM Notice_bowfun
		</selectKey>
		INSERT INTO Notice_bowfun
		VALUES(#{no}, #{title},
		#{content}, #{id}, #{writeDate}, 0, #{fileName})
	</insert>

	<select id="NoticeContent">
		SELECT * FROM Notice_bowfun
		WHERE no=#{n}
	</select>

	<update id="incrementViews">
		UPDATE Notice_bowfun SET views = views + 1 WHERE
		no=#{n}
	</update>

	<select id="NoticeDownload">
		SELECT fileName FROM Notice_bowfun WHERE no=#{n}
	</select>

	<update id="NoticeModifyProc">
		UPDATE Notice_bowfun SET title=#{title}, 
		content=#{content}, fileName=#{fileName} WHERE no=#{no}
	</update>

	<delete id="NoticeDeleteProc">
		DELETE FROM Notice_bowfun WHERE no=#{n}
	</delete>
</mapper>